<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.karalius.attendance.ModifyingStudentsController">
   <children>
      <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#backToMainWindow" text="Back to main window" />
      <ComboBox fx:id="groupSelector" layoutX="14.0" layoutY="92.0" onAction="#groupIsSelected" prefWidth="150.0" promptText="select group" />
      <Button fx:id="addButton" layoutX="171.0" layoutY="129.0" mnemonicParsing="false" onAction="#add" text="Add" />
      <TextField fx:id="newName" layoutX="15.0" layoutY="129.0" promptText="student name to add" />
      <Button layoutX="15.0" layoutY="188.0" mnemonicParsing="false" onAction="#delete" text="Delete selected student" />
   </children>
</AnchorPane>
